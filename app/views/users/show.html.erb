<%= render 'users/list', user: @users, book: @book %>


<h1>Books</h1>

<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <% @books.each do |book| %>
  <tr>
    <td>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %>
    </td>
    <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
    </td>
    <td><%= book.body %></td>
  <% end %>
  </tr>
</table>

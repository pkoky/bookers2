<h1>User info</h1>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %>
<p>name</p>
<%= user.name %>
<p>introduction</p>
<%= user.introduction %>
<p><%= link_to "edit", edit_user_path(@user.id) %></p>


<h1>New Book</h1>
<%= form_with model: book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
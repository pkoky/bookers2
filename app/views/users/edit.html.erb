<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
    <label>Name</label>
    <%= f.text_field :name %>
    <%= attachment_image_tag @user, :profile_image, :fill, 60, 60 %>
    <label>Image</label>
    <%= f.attachment_field :profile_image %>
    <label>introduction</label>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
<% end %>

<% @user.name %>

<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>




<% @users.each do |user| %>
<div>
  <p><%= user.name %></p>
  <%= link_to user_path(user.id) do %>
  <p>Show</p>
  <% end %>
</div>


<% end %>
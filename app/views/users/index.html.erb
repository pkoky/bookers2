<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>




<% @books.each do |book| %>
<div>
  <p><%= book.user.name %></p>
  <p><%= book.title %></p>
  <%= link_to user_path(book.id) do %>
  <p>Show</p>
  <% end %>
</div>


<% end %>
<%= render 'users/list', user: @user, book: @booknew %>

<table>
  <tr>
    <td>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %><br/>
      <%= @book.user.name %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

    <% if @book.user == current_user %>
      <td><%= link_to "edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "削除", book_path(@book), method: :delete %></td>
    <% end %>

</tr>
</table>
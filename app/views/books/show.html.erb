<%= render 'users/list', user: @user, book: @booknew %>


<div>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %>

<p><%= @book.user.name %></p>
<p><%= @book.title %></p>
<p><%= @book.body %></p>


<% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book.id) %>
    <%= link_to "削除", book_path(@book), method: :delete %>
<% end %>
</div>
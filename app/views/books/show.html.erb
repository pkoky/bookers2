<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @booknew %>
    <div class="col-md-8 offset-md-1">
<table>
  <tr>
    <h1>Book detail</h1>
    <td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %><br/>
      <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>

    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
    <% end %>

</tr>
</table>
    </div>
  </div>
</div>
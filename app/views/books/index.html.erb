<%= render 'users/list', user: @current_user, book: @book %>


<% @books.each do |book| %>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %>
  <p><%= book.user.name %></p>
  <%= link_to book_path(book.id) do %>
  <p><%= book.title %></p>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>
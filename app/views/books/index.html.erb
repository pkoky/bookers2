<%= render 'users/list', user: @user, book: @book %>

<h1>Books</h1>
<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
<% @books.each do |book| %>
<tr>
  <!--(book.userで@booksに紐づいたuser情報を引き出している-->
  <td><%= attachment_image_tag (book.user), :profile_image, :fill, 60, 60, fallback: "no_image_square.jpeg" %></td>
  <td>
    <%= link_to book_path(book.id) do %>
      <%= book.title %>
    <% end %>
  </td>
  <td><%= book.body %></td>
</tr>
<% end %>
</tbody>
</table>
<div class="container">
  <div class="row">
    <%= render 'users/list', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <!--(book.userで@booksに紐づいたuser情報を引き出している-->
            <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag (book.user), :profile_image, :fill, 40, 40, fallback: "no_image_square.jpeg", size: "40x40" %>
            <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
            <td class="favorite-btn">
              <%= render 'favorites/favorite-btn', book:book %>
            </td>
            <td>
              <p>コメント数:<%= book.book_comments.count %></p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
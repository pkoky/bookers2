<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Follow Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.following.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag (user), :profile_image, :fill, 40, 40, fallback: "no_image_square.jpeg", size: "40x40" %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <p>フォロー数:<%= user.following.count %></p>
            </td>
            <td>
              <p>フォロワー数:<%= user.followers.count %></p>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                show
              <% end %>
            </td>
          </tr>
      <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

